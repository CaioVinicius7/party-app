				"responses": {
					"201": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/definitions/PartyConfirmationResponse201"
								}
							}
						}
					},
					"400": {
						"description": "Party with this id does not exist! or Presence already confirmed for this party!",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/definitions/PartyConfirmationResponse400"
								}
							}
						}
					}
				}
			}
		}
